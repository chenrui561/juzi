<!--pages/user/dingdan.wxml-->
<view scroll-x="true" class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0"  bindtap="swichNav">基本信息</view>
   <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1"  bindtap="swichNav">资质荣誉</view> 
  <view wx:if="{{ys == 0}}" class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2"  bindtap="swichNav">医院环境</view>
  <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav">案例</view>

</view>
<view class="c_t60"></view>
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
  <!-- 基本信息 -->
  <swiper-item> 
  <scroll-view scroll-y="true" class="scoll-h">
    <view wx:if="{{ys == 0}}" class='flex_h font_14 bg_white p10'>
      <view class='flex_h w50'>
       <text class='hui'>面积：</text>
       <text class='c3'>{{orderList0[0].mianji}}</text>
      </view>
      <view class='flex_h w50'>
       <text class='hui'>级别：</text>
       <text class='c3'>{{orderList0[0].jibie}}</text>
      </view>
    </view>
   <view class='font_14 l_h24 p10 c3 flex bg_white' style='width:96%;'>
      <text style='white-space:nowrap;' class='hui'>简介：</text>
      <text >{{orderList0[0].brand_desc}}</text>
   </view>
   <view wx:if="{{user_lei > 0}}" class='font_14 l_h24 p10 c3 flex bg_white' style='width:96%;'>
      <text style='white-space:nowrap;' class='hui'>备注：</text>
      <text >{{orderList0[0].beizhu}}</text>
   </view>
    </scroll-view>
  </swiper-item>


  <!-- 执业资格 -->
  <swiper-item>
  <scroll-view scroll-y="true" class="scoll-h">

        <image wx:if="{{orderList1}}" wx:for="{{orderList1}}" data-img='{{item.img}}' bindtap='big_img' class='img' mode='aspectFill' src='{{item.img}}'></image>
        

<view class='l_h60 no_more'>没有更多了</view>
    </scroll-view>
  </swiper-item>

  <!-- 医院环境 -->
  
  <swiper-item>
  <scroll-view scroll-y="true" class="scoll-h">
  <image wx:if="{{orderList2}}" wx:for="{{orderList2}}"  data-img='{{item.img}}' bindtap='big_img' class='img' mode='aspectFill' src='{{item.img}}'></image>
<view class='l_h60 no_more'>没有更多了</view>
    </scroll-view>
  </swiper-item>

  <!-- 医院案例 -->
  <swiper-item>
  <scroll-view scroll-y="true" class="scoll-h">
<image wx:if="{{orderList3}}" wx:for="{{orderList3}}"  data-img='{{item.img}}' bindtap='big_img' class='img' mode='aspectFill' src='{{item.img}}'></image>
<view class='l_h60 no_more'>没有更多了</view>
    </scroll-view>
  </swiper-item>

</swiper>

<view wx:if="{{guanli == 1}}" bindtap='chooseImage' class='footfixed3 flex_h_c'>
          <text>上传</text>
</view>