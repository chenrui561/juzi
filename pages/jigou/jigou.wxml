<view class='jigou_info'>
  <view class='jigou_info1'>
    <image src='http://www.juziyimei.com/data/brandlogo/{{jigou_info.brand_logo}}' class='jigou_logo'></image>
    <text class='jigou_title'>{{jigou_info.brand_name}}</text>
  </view>
  <view class='jigou_info2'>
    <view class='yy'><text class='jigou_info_text'>12</text><text class='jigou_info_text'>日记</text></view>
    <view class='yy'><text class='jigou_info_text'>{{jigou_xiangmu_count}}</text><text class='jigou_info_text'>项目</text></view>
    <view class='yy'><text class='jigou_info_text'>5</text><text class='jigou_info_text'>医生</text></view>
  </view>
</view>
