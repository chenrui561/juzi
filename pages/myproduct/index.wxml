<view wx:for="{{shaidan}}" wx:key="key">
  <view class="shaidan_list">

      
      <!--处理用户头像开始-->
        <view wx:if="{{item.tx_img}}" style=" background-image:url({{item.tx_img}}); background-size: cover;background-position: center; float:left;height: 32px;width: 32px;border-radius: 50%;background-repeat: no-repeat; ">
        </view> 
        <view wx:if="{{!item.tx_img}}" style=" background-image:url(https://www.anranhaitao.com/mobile/themes/default/user_images/head.png); background-size: cover;background-position: center; float:left;height: 32px;width: 32px;border-radius: 50%;background-repeat: no-repeat; ">
        </view> 
        <!--处理用户头像结束-->
        <!--用户名和用户留言-->
          <view class="comment_sd" style="font-size: 14px;line-height: 32px;margin-top: 10px;">
              <text style="color:#070a8a">{{item.nick_name}}</text><image bindtap="remove_shaidan" data-sdid="{{item.id}}" wx:if="{{item.user_id == user_id}}" src='/images/pd_de.png' style='width:16px;height:16px;'></image>
          </view>
          <view class="comment_sd" style="margin-bottom: 10px;">
            <text style="font-size:14px; ">{{item.content}}</text>
            
          </view>
          <!--用户名和用户留言结束-->
  <!--如果是一张图的情况-->

          <view wx:if="{{item.comment_img && !item.comment_img2}}" class="comment_sd onbig_img" style="display: -webkit-box; ">
            
              <image bindtap="big_img" data-bigimg="{{item.img_arr}}" data-img="{{item.comment_img}}" mode='aspectFit' src="{{item.comment_img}}" style="max-width: 250px;max-height: 180px;"></image>
            
          </view>
      

<!--如果是大于一张图的情况-->
      <view  wx:if="{{item.comment_img2}}">    
          <view class="comment_sd onbig_img" style="display: -webkit-box;width:calc(100% - 30px); margin:0 auto;">
              <view bindtap="big_img" data-bigimg="{{item.img_arr}}" data-img="{{item.comment_img}}" style=" background-image:url({{item.comment_img}}); background-size: cover;background-position-x: center; margin-left:30px;" class="shaidan_img"></view>
              <view bindtap="big_img" data-bigimg="{{item.img_arr}}" data-img="{{item.comment_img2}}" style=" background-image:url({{item.comment_img2}}); background-size: cover;background-position-x: center;" class="shaidan_img"></view>
              <view bindtap="big_img" data-bigimg="{{item.img_arr}}" data-img="{{item.comment_img3}}" style=" background-image:url({{item.comment_img3}});background-size: cover;background-position-x: center;" class="shaidan_img"></view>
          </view>
          <view wx:if="{{item.comment_img4}}" class="comment_sd onbig_img" style="display: -webkit-box;width:calc(100% - 30px); margin:0 auto;">
              <view bindtap="big_img" data-bigimg="{{item.img_arr}}" data-img="{{item.comment_img4}}" style=" background-image:url({{item.comment_img4}}); background-size: cover;background-position-x: center; margin-left:30px;" class="shaidan_img"></view>
              <view bindtap="big_img" data-bigimg="{{item.img_arr}}" data-img="{{item.comment_img5}}" style=" background-image:url({{item.comment_img5}}); background-size: cover;background-position-x: center;" class="shaidan_img"></view>
              <view bindtap="big_img" data-bigimg="{{item.img_arr}}" data-img="{{item.comment_img6}}" style=" background-image:url({{item.comment_img6}});background-size: cover;background-position-x: center;" class="shaidan_img"></view>
          </view>
          <view wx:if="{{item.comment_img7}}" class="comment_sd onbig_img" style="display: -webkit-box;width:calc(100% - 30px); margin:0 auto;">
              <view bindtap="big_img" data-bigimg="{{item.img_arr}}" data-img="{{item.comment_img7}}" style=" background-image:url({{item.comment_img7}}); background-size: cover;background-position-x: center; margin-left:30px;" class="shaidan_img"></view>
              <view bindtap="big_img" data-bigimg="{{item.img_arr}}" data-img="{{item.comment_img8}}" style=" background-image:url({{item.comment_img8}}); background-size: cover;background-position-x: center;" class="shaidan_img"></view>
              <view bindtap="big_img" data-bigimg="{{item.img_arr}}" data-img="{{item.comment_img9}}" style=" background-image:url({{item.comment_img9}});background-size: cover;background-position-x: center;" class="shaidan_img"></view>
          </view>
</view> 
<view>
<!--以下是底部-->
        <view class="comment_sd" style=" margin-top:3px;  margin-bottom:3px;">
          <text id="zan_230" style="font-size:13px;color:#d0d0d0;">{{item.zan}}</text><text style="font-size: 13px; margin-right:5px;color:#d0d0d0;">赞</text>
          <text style="font-size:13px;color:#d0d0d0;">{{item.add_time}}</text>
         <!-- <image wx:if="{{item.count_dz == 0}}" bindtap="dianzan" data-sdid="{{item.id}}" style="height:20px; float:right; margin-right:3px; margin-top:3px;width: 20px;" src="/images/zan.png"></image>
          <image wx:if="{{item.count_dz == 1}}" bindtap="dianzan2" data-sdid="{{item.id}}" style="height:20px; float:right; margin-right:3px; margin-top:3px;width: 20px;" src="/images/zan2.png"></image>-->
        </view>
      </view>


  </view>
</view>
