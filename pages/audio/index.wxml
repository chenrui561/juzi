<view class="page">
  
  <view class="page__bd">
    <view class="section section_gap audio_1">
      <audio src="{{info.url}}" poster="{{current.poster}}" name="{{info.name}}" author="{{current.author}}" action="{{audioAction}}" bindplay="audioPlayed" bindtimeupdate="audioTimeUpdated" controls></audio>
    </view>
  </view>
<view class="section section_gap">
    <view class="body-view">
      <slider bindchange="timeSliderChanged" left-icon="cancel" right-icon="success_no_circle"/>
    </view>
  </view>
  <view class="section section_gap">

    <view class="body-view2">
      <button bindtap="playAudio">播放</button>
      <button bindtap="pauseAudio">暂停</button>
    </view>

  </view>


  

</view>