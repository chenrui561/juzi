
<!--pages/index/detail.wxml-->
<view wx:if="{{shouquan == 0}}" class='shouquan'></view>
<view class='shouquan_b' wx:if="{{shouquan == 0}}">
    <image style="width: 40px;height: 40px;border-radius: 50%;margin-top:40px;" src='/images/logo.jpg'></image>
    <text style="font-size: 14px;margin-top: 20px;">需要您授权登录桔子医美</text>
    <button style="bottom: 0;position: absolute;width: 100%;color: #1aad19;border-top-left-radius: 0px;border-top-right-radius: 0px;" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
</view>

<!--内容开始-->
<view class="cont">
      <button open-type="share" class="fenxiang"><image class="fenxiang_img" src='/images/fx.png'></image></button>
      <view wx:if="{{tid > 0}}" class="tuijian">
      <image class="tuijian_img" src='{{t_user.tx_img}}'></image>由{{t_user.nick_name}}推荐
      </view>
  <!--<image class="tp_image" src="{{itemData.photo_d}}"></image>-->
  <swiper style="height:100VW" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block >
      <swiper-item>
      
        <image src="https://www.juziyimei.com/{{goods_img}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
  <view class="title">{{title}}</view>
  
  <view class="gmxx">
    <view class='juzi_price'>
      <view>
        <text class='juzijia'>桔子价：￥</text>
        <span wx:if="{{goods_number > 0 && is_on_sale == 1}}" class="jiage">{{itemData.juzi_price}}</span>
        <span wx:if="{{goods_number == 0 || is_on_sale == 0 }}" style="color:#999;" class="jiage">{{itemData.juzi_price}}</span>
      </view>
      <view bindtap="addFavorites" wx:if="{{bd_id == 0}}" class="" >
                
                    <image class="icon_kf" style='display:{{none_off}}' src="/images/shc.png" ></image>
                    <image class="icon_kf" style='display:{{none_on}}' src="/images/shced.png" ></image>
                    
      </view>
    </view>
    <view class='yuanjia' style='height:30px;'>
      <view class="font_14 c6 goods_info">原价：<text style='text-decoration: line-through;'>￥{{market_price}}</text></view>
      <view class="font_14 c6 goods_info">武汉市</view>
    </view>
  </view>
  
</view>
