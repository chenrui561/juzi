<!--pay.wxml-->
<view class="w100">


		<view class="p_all bg_white df item" style="margin-top: 10px;" wx:for="{{goods_info}}" wx:key="key">
			<view class="cp_photo" style='width:20%;'>			
				<image src="http://www.juziyimei.com/{{item.goods_img}}"></image>
			</view>
			<view style='width:80%;overflow:hidden;text-overflow:ellipsis;display:flex;-webkit-line-clamp:2;-webkit-box-orient:vertical;justify-content:space-between;' >	
      <view>
				<view  class="font_14 mt5 ovh1">{{item.goods_name}}</view>
        <view  class="font_11 mt5 ovh1 c9">{{item.brand_name}}</view>
        <view  class="font_11 mt5 c9 flex_h" wx:if="{{item.tid > 0}}"><image class='mini_tx_img' src='{{item.tx_img}}'></image>{{item.passwd_answer}}向你推荐</view>
       </view>
      <view style='margin-left:5%;' >
			<text wx:if="{{tuanid == 0}}" class="gm_ovh_1h red pt10">¥{{item.goods_price}}</text>
      <text wx:if="{{tuanid > 0}}" class="gm_ovh_1h red pt10">¥{{item.tuan_price}}</text>
      <view class="stepper">
            <!-- 减号 -->
                  <text data-rid="{{item.rec_id}}" data-num="{{item.goods_number}}" bindtap="bindMinus" >-</text>
            <!-- 数值 -->
                      <text type="number">{{item.goods_number}}</text>
            <!-- 加号 -->
                    <text class="normal" bindtap="bindPlus" data-num="{{item.goods_number}}" data-rid="{{item.rec_id}}">+</text>
      </view> 

      </view>
			</view>
		</view>		

<!-- 到院时间-->
  <view class="info" style="margin-top: 10px;">		
  <picker mode="date" value="{{date}}" start="{{now}}"   bindchange="bindDateChange">
    <view class="picker">
      请选择到院时间: {{date}}
    </view>
  </picker>
	</view>
<!--优惠券-->
<view class="info" wx:if="{{user_bonus}}" >
  <view class="q_info">优惠券：</view>
  <!--优惠券-设置监听器，当点击radio时调用-->
  <radio-group bindchange="listenerRadioGroup" class="hui">
  <!--label通常与radio和checkbox结合使用-->
  <label style="display: flex" class="xuan" bindtap="getvou" data-id="0" data-price="0">
    <radio value="0" checked="true">不使用</radio>
  </label>
    <label style="display: flex" wx:for="{{user_bonus}}" wx:key="key" wx:if="{{item.type_money > 0}}" class="xuan" bindtap="getvou" data-id="{{item.bonus_id}}" data-price="{{item.type_money}}">
    <radio value="{{item.bonus_id}}" >{{item.type_name}}【{{item.type_money}}元】</radio>
  </label>
  
  </radio-group>
</view>
<!--余额支付-->
    <view class="info" style="margin-top: 10px;">
			<view style="display: flex;Flex-direction:column;">
          <view class="q_info">
           您的账户余额：{{yue}}元
          </view>

          <view class='xz_yue' >
              <view style="display: flex;">
                  <checkbox-group bindchange="checkboxChange">
                    <label class="checkbox"  >
                      <checkbox  value="{{pay_yue==''?yue:pay_yue}}" checked=""></checkbox>
                    </label>
                  </checkbox-group>
                  <input class="y_input {{input?'eee':'fff'}}"  disabled="{{input}}" type="digit" min="0" max="{{yue}}" name="surplus" value="{{yue}}" bindinput="yue_input"></input>
              </view>
              <text wx:if="{{on_pay_yue > 0}}" style="line-height: 1.5rem;color: red;margin-right: 10px;">余额支付{{on_pay_yue}}元</text>
              <text wx:if="{{on_pay_yue == 0}}" style="line-height: 1.5rem;color: red;margin-right: 10px;">勾选使用余额支付</text>
          </view>
          
      </view>
		</view>	
<!--备注支付-->
		<view class="p_all bg_white mt10 font_14" style="margin-top: 10px;">
			<textarea class="min_60" auto-height name="remark" placeholder="备注" bindinput="remarkInput" value="{{remark}}"/> 
		</view>	

	<view wx:if="{{tuanid == 0}}" class="zhifu mt10 tc">应共支付：<span class="font_20 red">¥ {{total}}</span></view>
  <view wx:if="{{tuanid > 0}}" class="zhifu mt10 tc">应共支付：<span class="font_20 red">¥ {{tuan_price}}</span></view>
