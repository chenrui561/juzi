/* pages/user/bd.wxss */
@import "../lib/weui.wxss";
page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}
.yzm{
  font-size: 13px;
  background-color: #F14918;
  border-radius: 5px;
  line-height: 2.5em;
  padding-left: 10px;
  padding-right: 10px;
  color: #fff;
}
.yzm_djs{
  font-size: 13px;
  background-color: #999;
  border-radius: 5px;
  line-height: 2.5em;
  padding-left: 10px;
  padding-right: 10px;
  color: #333;
}
.page-body {
  padding: 20rpx 0;
}
.page-section{
  margin-bottom: 20rpx;
}
.shouquan{
  width: 100%;height: 100%;position: fixed;z-index: 999;background-color: #000;display: flexd;opacity: 0.7;
}
.shouquan_b{
  position: fixed;width: 80%;z-index: 9999;margin-top: 40%;margin-left: 10%;border-radius:5px;height: 200px;background-color: #fff;
  display:flex;flex-direction:column;
  align-items:center;
}
.xuanze_text{
  overflow:hidden;
text-overflow:ellipsis;
display:-webkit-box;
-webkit-line-clamp:1;
-webkit-box-orient:vertical;
width: 190px;
}
.xuanze_box{
  width: 200px;text-align: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.xuanze{
  width: 11px;height: 10px;margin-left: 5px;
}
.qbdd{
  background: #fff;
  width: 100%-10px;
  font-size: 12px;
  color: #666;
  padding: 4%;
  margin: 10px;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}