page {
  background: #f6f7f8;
}

.question-form {
  margin: 25rpx;
}

.question-input-area {
  background-color: #fff;
  border: 1rpx solid #f2f2f2;
  border-radius: 4rpx;
}

.question-title-wrap {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  margin: 10rpx 20rpx;
  padding: 20rpx 0;
}

.question-title {
  flex: 1;
}

.weui-textarea-counter, .title-input-counter {
  color: #b3b3b3;
  font-size: 14px;
  padding-left: 10rpx;
}

.weui-cell::before, .weui-cells::before, .weui-cell::after, .weui-cells::after {
  border: none;
}

.question-images-area {
  padding: 40rpx 0;
}

.question-images-tool {
  display: flex;
  align-items: center;
}

.question-images {
  display: flex;
  flex-wrap:wrap;
}

.q-image-wrap {
  width: 17vw;
  margin-right: 10rpx;
}

.q-image {
  flex: 1;
  height: 17vw;
  width: 17vw;
}
.q-image-j {
  height: 17vw;
  width: 17vw;
}
.q-image-remover {
  text-align: center;
}
.qbdd{
  background: #fff;
  width: 100%-10px;
  font-size: 12px;
  color: #666;
  padding: 4%;
  margin:  10px 0;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.xuanze{
  width: 11px;height: 10px;margin-left: 5px;
}
.xuanze_box{
  width: 200px;text-align: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.tijiao{
  position: fixed;
  bottom: 10px;
  width: calc(100% - 25px);
}