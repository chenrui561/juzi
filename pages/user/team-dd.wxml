  <!-- 待付款 -->
  <view wx:if="{{currentTab == 0}}">
    <view class="scoll-h">
      <view class="shop " wx:for="{{orderList0}}" wx:key="key">
        <view style="height:36px;width:100%;line-height: 36px;background-color:#fff;">
          <view class="sp_tit ovh1">
            <text>预约时间：{{item.order_time}}</text>
            <text style="float: right;margin-right: 20px;color: #F14918;">待支付</text>
          </view>
        </view>
        <view class="df">
          <image class="sh_slt" src="{{item.img}}"></image>
          <navigator url="../order/detail?orderId={{item.order_id}}" class="df_1">
            <view class="sp_text">
              <view class="sp_neb">订单号：{{item.order_sn}}</view>
              <view class="sp_neb">共{{item.all_goods_number}}项预约</view>
              <view class="sp_jg">预约时间：{{item.dy_time}}</view>
            </view>
          </navigator>
        </view>

        <view style="height:40px;width:100%;line-height: 36px;background-color:#fff;">
          <view class="yyj"><text style='color:#F14918;font-size:14px;'>{{item.passwd_answer}}/{{item.rel_name}}</text>已支付预约金：￥
            <text style='color:#F14918;font-size:14px;'>{{item.money_paid}}</text>
          </view>
          <view class="black_bnt font_12 fl_r" bindtap="payOrderByWechat" data-orderid="{{item.order_id}}" data-logid="{{item.log_id}}">微信支付</view>
          <view class="black_bnt2 font_12 fl_r mr_5" bindtap="removeOrder" data-orderid="{{item.order_id}}">取消订单</view>
        </view>
      </view>
      <view class='no_more' style='margin-bottom:100px;'>{{more0}}</view>
    </view>
  </view>


  <!-- 已预约 -->
  <view wx:if="{{currentTab == 1}}">
    <view scroll-y="flase" class="scoll-h">
      <view class="search_no" wx:if="{{!orderList1.length}}">
        <view class="font_14">
          <image class="scimg" src="/images/search_no.png"></image>
        </view>
        <text>没有可用订单/(ㄒoㄒ)/~~</text>
      </view>
      <view class="shop" wx:for="{{orderList1}}" wx:key="key">
        <view style="height:36px;width:100%;line-height: 36px;background-color:#fff;">
          <view class="sp_tit ovh1">
            <text>到院时间：{{item.dy_time}}</text>
            <text style="float: right;margin-right: 20px;color: #F14918;">{{item.order_zhuangtai}}<text class='green'>{{item.genjin_state_name}}</text></text>
          </view>
        </view>
        <view class="df">
        <navigator url="../order/detail?orderId={{item.order_id}}" class="df_1">
            <view class="sp_text">
              <view class="sp_neb">报备时间：{{item.order_time}}</view>
              <view class="sp_neb">下次跟进时间：{{item.gj_time}}</view>
              <view class="sp_neb">留言：{{item.postscript}}</view>
              <view class="sp_neb">最后跟进时间：{{item.genjin_time}}</view>
            </view>
          </navigator>
          <view class='ss_price'>
            <view class='font_16' style='color: #F14918;'>
              <text class='font_12'>￥</text>
              <text>{{item.goods_amount}}</text>
            </view>
            <view class='font_12'>手术金额</view>
          </view>
          
        </view>
        <view style="height:40px;width:100%;line-height: 36px;background-color:#fff;">
          <view wx:if="{{item.qudao_tj}}" class="yyj">渠道
            <text class='juzi_cor'>{{item.rel_name}}</text>，报备
            <text class='juzi_cor'>{{item.qudao_tj}}</text>
          </view>
          <view wx:else class="yyj">
          <text style='color:#F14918;font-size:14px;'>{{item.passwd_answer}}/{{item.rel_name}}</text>
          已支付预约金：￥
            <text style='color:#F14918;font-size:14px;'>{{item.money_paid}}</text>
          </view>
        </view>
      </view>
      <view class='no_more' bindtap='loadOrderList2' style='padding-bottom:100px;'>{{more1}}</view>
    </view>
  </view>

