<view scroll-x="true" class="swiper-tab">
  <!-- <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" data-otype="pay" bindtap="swichNav">待付款</view>-->
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" data-otype="deliver" bindtap="swichNav">已预约</view>
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" data-otype="daoyuan" bindtap="swichNav">已到院</view>
  <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" data-otype="jiesuan" bindtap="swichNav">已结算</view>
  <view class="swiper-tab-list {{currentTab==4 ? 'on' : ''}}" data-current="4" data-otype="no_finish" bindtap="swichNav">已取消</view>
  <!--<view class="swiper-tab-list {{currentTab==4 ? 'on' : ''}}" data-current="4" data-otype="fenxiang" bindtap="swichNav">拼团订单</view>
  <view class="swiper-tab-list {{currentTab==4 ? 'on' : ''}}" data-current="4" bindtap="swichNav">退款/售后</view>-->
</view>
<view class="c_t60"></view>
<view class='flex_h ml10 '>

  <picker wx:if="{{isStatus == 'deliver'}}" mode="selector" range="{{daoyuan_states_list}}" class="youhui_f " bindchange="daoyuan_states">{{daoyuan_states_list[daoyuan_states]}}({{count1}})</picker>
   <picker wx:if="{{isStatus == 'daoyuan'}}" mode="selector" range="{{jiesuan_states_list}}" class="youhui_f " bindchange="jiesuan_states">{{jiesuan_states_list[jiesuan_states]}}({{count2}})</picker>
  <picker wx:if="{{isStatus == 'jiesuan'}}" mode="selector" range="{{jiesuan2_states_list}}" class="youhui_f " bindchange="">{{jiesuan_states_list[0]}}({{count3}})</picker>
  <picker wx:if="{{isStatus == 'no_finish'}}" mode="selector" range="{{quxiao_states_list}}" class="youhui_f " bindchange="">{{quxiao_states_list[0]}}({{count4}})</picker>
  <picker mode="date"   class="youhui_f {{genjin_states_id > 0 ? 'youhui_f_on':''}} " bindchange="genjin_states">{{genjin_states[genjin_states_id]}}</picker>
 <view class="youhui_f {{genjin == 1 ? 'youhui_f_on':''}} "  bindtap="genjin">跟进时间排序</view>
 <view class="youhui_f " bindtap="qingkong" >清空</view>
</view>
<view class='flex_h ml20 mr5'>
  <view class="font_14 hui">预约时间：</view>
  <picker mode="date"   class="youhui_f  " bindchange="yy_time_start">{{yy_time_start==0?'请选择':yy_time_start}}</picker>
  -
  <picker mode="date"   class="youhui_f " bindchange="yy_time_end">{{yy_time_end==0?'请选择':yy_time_end}}</picker>
 
</view>
<view class='flex_h ml20 mr5'>
