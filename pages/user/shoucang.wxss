/* pages/user/shoucang.wxss */
.page{margin-top: 10px;}
.clearbutton{
    background: #fff; 
    display: inline-block;
    margin:3% 3% 2% 3%; 
    color: #dd2727;
    font-size: 14px;
    width: 94%;
}
.shop{
    background: #fff;
    padding: 4%;
    margin-bottom: 10px;
}
.price{
  display: flex;
  justify-content: space-between;
}
.sh_slt{
    width: 80px;
    height: 80px;
    overflow: hidden;
    border-radius: 5px;
    margin-right: 4%;
    float: left;
}
.sp_text{
    float: left;
    line-height: 20px;
    width: 100%;
    height: 100%;
    display:flex;
    flex-direction:column;
    justify-content: space-between;
    }
.sp_tit{
    width: 100%;
    overflow: hidden;
    font-size: 14px;
}
.sp_neb{
    width: 100%;
    overflow: hidden;
    font-size: 12px;
    color: #999;
}
.sp_jg{
    overflow: hidden;
    font-size: 16px;
    color: #fc0628;
    display:flex;
}
.sp_jg1{
    text-decoration:line-through;
    overflow: hidden;
    font-size: 13px;
    color: #999;
}
.dle{
    color: #999;
    font-size: 12px;
    float: right;
}
.dle image{
    width: 18px;
    height: 18px;
    vertical-align: sub;
}
.jk_bottom{
    position: fixed;
    bottom: 0;
    background: #fff;
    width: 100%; 
    display: inline-flex;
    border-bottom: 1px solid #eee; 
    font-size: 14px;
    color: #999;       
}
.guanzhu{
  font-size: 13px;
  line-height: 20px;
  height: 20px;
  color: #F14918;
  margin: 2px 15px;
  padding: 1px 10px;
  border-radius:5px; 
  border:1px solid #F14918;
}
.guanzhu2{
  font-size: 13px;
  line-height: 20px;
  height: 20px;
  color: #999;
  margin: 2px 15px;
  padding: 1px 10px;
  border-radius:5px; 
  border:1px solid #999;
}
.swiper-tab{  
    width: 100%;  
    border-bottom: 1px solid #eee;  
    text-align: center;  
    line-height: 80rpx;
    background: #fff;  
    position: fixed;
    top: 0;  
    display: flex;
    z-index: 999;
    overflow: hidden;
     flex-direction: row;
    }  
.swiper-tab-list{  
  font-size: 12px;  
   
  width: 50%;  
  color: #666;  
  }  
  .on{ 
  color: #F14918;  
  border-bottom: 5rpx solid #F14918;
  }  
  /* 话题*/
.huati_list{
  padding-top: 35px;
}
.huati{
  margin: 5px 0;
  padding: 5px 8px;
  background-color: #fff;
}
.huati_title{
  font-size: 16px;
  font-weight: 700;
  line-height: 28px;
}
.huati_img{
  width: 110px;
  height: 70px;
  flex-shrink:0;
  margin-left: 10px;
  border-radius: 10px;
}
.huati_info{
  margin-bottom: 5px;
}
.huati_text{
  font-size: 15px;
  color: #666;
  line-height: 22px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.huati_last{
  font-size: 14px;
  color: #999;
  width: 100%;
}
.touxiang_img{
  width: 16px;
  height: 16px;
  border-radius: 50%;
  margin-right: 5px;
}
