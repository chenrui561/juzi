        <input name="bz" bindinput='input_mobile' class="weui-input" maxlength="11" placeholder="请填写备注" />
      </view>
    </view>

  <button style="margin-top:30px;width: 86%;color: #F14918;background-color:#fff;" formType="submit">提交</button>
  
