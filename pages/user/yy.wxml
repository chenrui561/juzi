<picker   bindchange="bindPickerChange" value="{{index}}" range="{{yiyuan}}" class="qbdd mt10" >
      <span class="font_14 c3">医院</span>
      <span class="fl_r c9 xuanze_box" hover-class="none"> 
        <text class='xuanze_text' wx:if="{{yiyuan_index > 0 }}">{{yiyuan[yiyuan_index]}}</text>
        <text wx:else>请选择医院</text>
        <image class='xuanze' src="/images/x_right.png"></image></span>
  </picker>

  <picker mode="date" value="{{dy_time}}" class="qbdd mt10"  bindchange="bindDateChange">
    <span class="font_14 c3">到院时间</span>
    <span class="fl_r c9 xuanze_box" hover-class="none"> 
        <text>{{dy_time}}</text>
          <image class='xuanze' src="/images/x_right.png"></image>
    </span>
  </picker>


  <view class="page-section">
    <view class="page-section">
        <view class="weui-cells__title" >姓名</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <input name="name" class="weui-input"  placeholder="请输入客户姓名" />
          </view>
        </view>
      </view>

    <view class="weui-cells__title">手机号</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input name="phone" type='number' bindinput='input_mobile' class="weui-input" maxlength="11" placeholder="客户的手机号" />

      </view>
    </view>
  </view>
    <view class="weui-cells__title">预约项目备注</view>
    <view class="weui-cells weui-cells_after-title">
