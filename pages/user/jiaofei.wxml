  <view class='flex_h'>
    <view class='yangshi shijian'>时间</view>
    <view class='yangshi nick '>昵称</view>
    <view class='yangshi sl'>手机号</view>
    <view class='yangshi bz'>状态</view>
  </view>

  <navigator class='flex_h' url='../user/detail?id={{item.user_id}}' wx:for="{{goods_user}}" wx:key="key">
