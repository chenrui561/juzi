<!--进别人的号的用户信息-->
<view wx:if="{{id == 6 || id == 7 || id == 8}}"  class='search'>
<input placeholder="请输入您要搜索的内容" bindconfirm="doSearch3" confirm-type="搜索" type='text' value="{{searchValue}}" bindinput="searchValueInput"/>
</view>
<view wx:if="{{id == 6 || id == 7 || id == 8}}" class="mt40"  >
<view class='flex_h'>
    <view class='yangshi shijian'>时间</view>
    <view class='yangshi nick '>昵称</view>
    <view class='yangshi sl'>手机号</view>
    <view class='yangshi bz'>身份</view>
  </view>
  <view class='flex_h ' bindtap='goto' data-id='{{item.user_id}}' wx:for="{{goods_user_all}}" wx:key="key">
    <view class='yangshi2 shijian'>{{item.reg_time}}</view>
    <view class='yangshi2 nick '>{{item.passwd_answer}}</view>
    <view class='yangshi2 sl'>{{item.mobile_phone}}</view>
    <view wx:if="{{item.user_lei == 0}}" class='yangshi2 bz hui'>直客</view>
    <view wx:if="{{item.user_lei == 1}}" class='yangshi2 bz juzi_cor'>总监</view>
    <view wx:if="{{item.user_lei == 2}}" class='yangshi2 bz pl_cor'>城市合伙人</view>
    <view wx:if="{{item.user_lei == 3}}" class='yangshi2 bz hui'>市代</view>
    <view wx:if="{{item.user_lei == 6}}" class='yangshi2 bz pl_cor'>会员</view>
    <view wx:if="{{item.user_lei == 11}}" class='yangshi2 bz green'>客服</view>
    <view wx:if="{{item.user_lei == 12}}" class='yangshi2 bz green'>客服新人</view>
    <view wx:if="{{item.user_lei == 99}}" class='yangshi2 bz green'>管理员</view>
  </view>
  <view class='no_more' style='margin-bottom:70px;'>{{more}}</view>
</view>
