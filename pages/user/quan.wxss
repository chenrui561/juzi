/* pages/user/quan.wxss */
.quan_box{
display: flex;

background-color: #fff;
margin-top: 10px;
margin-left: 2%;
width: 96%;
border-radius: 5px;
box-shadow: 2px 2px 10px #ccc;
flex-direction:column;

}
.liji{
  font-size: 14px;
  border-radius: 20px;
  border:1px solid #ff6d74;
  padding:5px 10px;
color: #ff6d74;
}
.quan_up{
  height: 80px;
  width: 100%;
display: flex;
border-top-right-radius: 5px;
border-top-left-radius: 5px;
}
.quan_up_left{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #ff6d74;
}

.quan_up_center{
width: 50%;
display: flex;
flex-direction: column;
justify-content: center;
align-items: flex-start;
margin-left:20px;
line-height:20px;
color: #666;
}
.quan_up_right{
width: 35%;
 display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.rmb{
  font-size: 12px;
}
.price{
  font-size: 24px;
  font-weight: 700;
}
.djq{
  font-size: 12px;
}
.quan_type{
  font-size: 12px;
  margin-top:5px;

}
.quan_time{
  font-size: 12px;
}
.quan_down{
  height: 30px;
  width: 100%;
background-color: #f2f2f2;
border-bottom-left-radius: 5px;
border-bottom-right-radius: 5px;
display: flex;
justify-content: space-between;
}
.quan_down_left{
  font-size: 11px;
  color: #999;
  line-height: 30px;
  margin-left: 10px;
}
.quan_down_right{
  font-size: 11px;
  color: #999;
  line-height: 30px;
  margin-right: 10px;
}
.bottom{
  display: flex;
  justify-content: center;
  line-height: 40px;
}
.nothing{
  color: #999;
  font-size: 11px;
}
.shixiao{
  color: #ff6d74;
  font-size: 11px;
  margin-left: 2px;
}


