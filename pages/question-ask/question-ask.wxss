.weui-btn{
  position: fixed;
  bottom: 0px;
  width: 100%;
  color: #fff;
  background-color: #F14918;
  border-radius:0px;
  z-index: 9999;
}
button::after{
border: none;
}
.question-input-area {
  background-color: #fff;
  border: 1rpx solid #f2f2f2;
  border-radius: 10rpx;
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
}

.question-title-wrap {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  margin: 10rpx 30rpx;
  padding: 20rpx 0;
}

.question-title {
  flex: 1;
}

.weui-textarea-counter, .title-input-counter {
  color: #b3b3b3;
  font-size: 14px;
  padding-left: 10rpx;
}

.weui-cell::before, .weui-cells::before, .weui-cell::after, .weui-cells::after {
  border: none;
}
